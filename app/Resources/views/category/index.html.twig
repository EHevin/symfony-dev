{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.libelle }}</td>
                <td>
                    <a class="btn btn-light" href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                    <a class="btn btn-info" href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-info" href="{{ path('category_new') }}">Create a new category</a>

{% endblock %}
