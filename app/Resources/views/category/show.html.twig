{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ category.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Liste des articles li√©s </h2>
    <table class="table table-hover">
        <thead class="thead-light">
        <tr>
            <th>Libelle</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            {% for article in category.articles %}
                <tr>
                    <td>{{ article.libelle }}</td>
                    <td>{{ article.prix }}</td>
                    <td>
                        <a class="btn btn-light"  href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                        <a class="btn btn-info" href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-light" href="{{ path('category_index') }}">Back to the list</a>
    <a class="btn btn-info" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
    {{ form_start(delete_form) }}
        <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}


{% endblock %}
